    ViewBag.Title = "Home Page";
}

<link href="~/Content/StyleSheet.css" rel="stylesheet" type="text/css" />


<div class="foodfinderlarge">
    <p>       
        <span style='color: dodgerblue'>F</span>
        <span style='color: purple'>o</span>
